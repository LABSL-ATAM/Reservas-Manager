
[% USE date %]
[% USE Dumper(indent=1, pad="<br>") %]
[% date.format %]



[% IF session.logged_in %]
<!--  
	<form action="[% add_pedido_url %]" method=post class=add-entry>
	<dl>
		<dt>Title:
		<dd><input type=text size=30 name=title>
